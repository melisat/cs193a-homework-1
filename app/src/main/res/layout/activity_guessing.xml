<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.melisatokmak.numberguessinggame.Guessing">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the Number Guessing Game!"
        android:id="@+id/welcome_message"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:textSize="40dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/input"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/guess_message"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUESS"
        android:id="@+id/submit_button"
        android:layout_marginTop="44dp"
        android:clickable="true"
        android:onClick="submit_click"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/input"
        android:layout_alignRight="@+id/welcome_message"
        android:layout_alignEnd="@+id/welcome_message" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter your guess below:"
        android:id="@+id/guess_message"
        android:layout_below="@+id/welcome_message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="by Melisa"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW GAME"
        android:id="@+id/restart_button"
        android:clickable="true"
        android:onClick="new_game_click"
        android:layout_alignBottom="@+id/submit_button"
        android:layout_alignRight="@+id/guess_message"
        android:layout_alignEnd="@+id/guess_message" />

</RelativeLayout>
